{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,

    "rootDir": "./backend/src",
    "outDir": "backend/build"
  },
  "ts-node": {
    "esm": false
  },
  "include": ["backend/src"]
}